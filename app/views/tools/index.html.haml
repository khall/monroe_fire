= form_tag tools_path, method: :get do
  = search_field_tag :search, params[:search], placeholder: 'Search for tool'
  = submit_tag 'Search'

%table
  %thead
    %tr
      %th Name
      %th Vehicle
      %th Compartment
      %th Quantity
  %tbody
    - @tools.each do |tool|
      %tr
        %td= tool.name
        %td= tool.vehicle.name
        %td= tool.compartment.description
        %td= tool.quantity